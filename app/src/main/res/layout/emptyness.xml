<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showMap"
        android:id="@+id/btnShowMap"
        android:text="Mapa"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp" />

    <TextView
        android:text="Cliente: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp" />

    <TextView
        android:text="Cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/client_view"
        android:textAlignment="center"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="Descripción"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delivery_status"
        android:layout_alignLeft="@+id/delivery_status"
        android:layout_alignStart="@+id/delivery_status"
        android:layout_marginTop="30dp"
        android:id="@+id/delivery_description"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <TextView
        android:text="Tamaño:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delivery_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:id="@+id/textView10"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center" />

    <TextView
        android:text="Tamaño"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/delivery_size"
        android:layout_below="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:textAlignment="center" />

    <TextView
        android:text="Cantidad: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delivery_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textView12"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/delivery_description"
        android:layout_alignStart="@+id/delivery_description"
        android:layout_marginTop="13dp"
        android:id="@+id/delivery_quantity"
        android:text="Cantidad"
        android:textAlignment="center" />


    <TextView
        android:text="Estado de la entrega:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView7"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/client_view"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:text="Estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/delivery_status"
        android:textAlignment="center" />

    <Button
        android:text="Cambiar Estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_status"
        android:onClick="goToChangeState"/>


</LinearLayout>